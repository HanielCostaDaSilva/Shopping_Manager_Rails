<%= form_with(model: store) do |form| %>
<% if store.errors.any? %>
<div style="color: red">
    <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

    <ul>
        <% store.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>

    <h2> Dados do Gerente</h2>
    <!-- Campo para Nome do Gerente -->
    <%= form.fields_for :manager do |manager_form| %>
      <%= manager_form.label :name, "Nome do Gerente", style: "display: block" %>
      <%= manager_form.text_field :name %>
    
      <%= manager_form.label :birthdate, "Data de nascimento", style: "display: block" %>
      <%= manager_form.date_field :birthdate %>
    
    <% end %>
    
    <div>
        <%= form.submit %>
    </div>
    <% end %>