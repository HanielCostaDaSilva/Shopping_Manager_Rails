<h1>Novo Contato</h1>

<%= form_with(model: [@store, @contact], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :type_contact %>
    <%= form.text_field :type_contact, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :value_contact %>
    <%= form.text_field :value_contact, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :store_id %>
    <%= form.collection_select :store_id,@stores,:id,:name, prompt: "Selecione uma loja",class: 'form-control'  %>
  </div>


  <div class="form-group">
    <%= form.submit 'Criar Contato', class: 'btn btn-primary' %>
  </div>
<% end %>
